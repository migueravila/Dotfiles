#########################################################################
## System Basics
#########################################################################

# Set mod key (Mod1=<Alt>, Mod4=<Super>)
set $mod Mod4

# Configure border style <normal|1pixel|pixel xx|none|pixel>
default_border pixel 1
default_floating_border pixel 1

# Hide borders
hide_edge_borders both

# change borders
bindsym $mod+Shift+u border none
bindsym $mod+Shift+y border pixel 1

# Font for window titles. Will also be used by the bar unless a different font
font xft:Proxima Nova 9

# Use Mouse+$mod to drag floating windows
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec alacritty

# kill focused window
bindsym $mod+q kill

# start program launcher
bindsym $mod+space exec --no-startup-id dmenu_run -nb '#141414' -sb '#60b48a' -sf '#eaeaea' -fn 'Proxima Nova 8' -p 'ÔÅî'

# launch categorized menu
bindsym $mod+d exec --no-startup-id morc_menu

#########################################################################
## Sound
#########################################################################

bindsym $mod+Ctrl+m exec terminal -e 'alsamixer'

bindsym XF86AudioRaiseVolume exec "amixer -q sset Master,0 1+ unmute; exec notify-send 'üîä Volume Up'"
bindsym XF86AudioLowerVolume exec "amixer -q sset Master,0 1- unmute; exec notify-send 'üîâ Volume Down'"
bindsym XF86AudioMute exec "amixer -q sset Master,0 toggle; exec notify-send 'üîà Toggle Mute' "


